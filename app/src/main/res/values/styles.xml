<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style pour les textes -->
    <style name="text">
        <item name="android:textSize">17dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>

    <!-- Style pour les entrées (inputs) -->
    <style name="input">
        <item name="android:paddingBottom">20dp</item>
    </style>

    <!-- Couleurs globales de l'application (à déplacer dans colors.xml si nécessaire) -->
    <color name="colorPrimary">#87CEEB</color>
    <color name="colorPrimaryDark">#87CEEB</color>
    <color name="colorAccent">#87CEEB</color>
    <color name="backgroundColor">#FFFFFF</color>

</resources>
